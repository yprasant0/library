

<div align="center">


<%if !@student.nil? %><h1>Enter a New Student</h1>
<%= form_for @student, url: students_path do |f| %>

  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.label :address %><br>
    <%= f.text_area :address %>
  </p>

  <p>
    <%= f.label :section %><br>
    <%= f.text_area :section %>
  </p>

  <p>
    <%= f.submit %>
  </p>

<% end %>
    <%else %>
    <p id="notice"><%= flash[:notice] %></p>
<%end %>
</div>